<% if logged_in? && current_user.own?(@post) %>
  <%= link_to(edit_post_path(@post), { method: :get, class: 'linkcolor' }) do %>
    <%= icon 'fa', 'pen' %>
  <% end %>
  <%= link_to(@post, { method: :delete, data: { confirm: '削除してよろしいですか？' }, class: 'linkcolor' }) do %>
    <%= icon 'fas', 'trash' %>
  <% end %>
<% end %>
