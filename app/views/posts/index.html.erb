<% content_for(:title, t('.title')) %>
<div class="container">
  <figure>
    <% @posts.each do |post| %>
      <% post.photos.each do |photo| %>
        <%= link_to post do %>
          <%= image_tag(photo) %>
          <figcaption>
            <%= post.caption %><br>
            <i class="far fa-user"></i>
            <%= post.user.name %>
          </figcaption>
        <% end %>
      <% end %>
    <% end %>
  </figure>
</div>
