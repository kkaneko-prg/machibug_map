<%= form_with model: @post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :caption %>
    <%= f.text_area :caption %>
  </div>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo, direct_upload: true, multiple: true %>
  </div>
  <div class="actions">
    <%= f.submit (t 'defaults.register') %>
  </div>
<% end %>
